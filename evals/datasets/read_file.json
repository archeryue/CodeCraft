          "special.txt": "Hello ðŸš€ World! \n\t Special chars: @#$%^&*()"
        }
      }
    },
    {
      "id": "read-008",
      "description": "Read file in subdirectory",
      "tool": "read_file",
      "category": "happy_path",
      "tags": ["read", "subdirectory", "path"],
      "difficulty": 1,
      "input": {
        "params": {
          "path": "subdir/nested.txt"
        }
      },
      "expected": {
        "success": true,
        "exact": "nested content"
      },
      "fixtures": {
        "type": "inline",
