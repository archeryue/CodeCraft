      "difficulty": 2,
      "input": {
        "params": {
          "path": "test.txt",
          "limit": 0
        }
      },
      "expected": {
        "success": false,
        "errorCode": "INVALID_PARAMS"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "test.txt": "content"
        }
      }
    },
    {
      "id": "read-014",
      "description": "Read large file (performance)",
      "tool": "read_file",
      "category": "performance",
      "tags": ["read", "performance", "large"],
      "difficulty": 3,
      "input": {
        "params": {
          "path": "large.txt",
          "limit": 100
        }
      },
      "expected": {
        "success": true,
        "performance": {
          "maxTimeMs": 100
        }
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "large.txt": "{{repeat:line {{i}}\n:10000}}"
        }
      }
    },
    {
      "id": "read-015",
      "description": "Read file with very long lines",
      "tool": "read_file",
      "category": "edge_case",
      "tags": ["read", "long-lines"],
      "difficulty": 2,
      "input": {
        "params": {
          "path": "longline.txt"
        }
      },
      "expected": {
        "success": true,
        "pattern": "^a{3000}$"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "longline.txt": "{{repeat:a:3000}}"
        }
      }
    }
  ]
}
