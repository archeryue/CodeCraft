        }
      }
    },
    {
      "id": "read-009",
      "description": "Read JSON file",
      "tool": "read_file",
      "category": "happy_path",
      "tags": ["read", "json", "structured"],
      "difficulty": 1,
      "input": {
        "params": {
          "path": "data.json"
        }
      },
      "expected": {
        "success": true,
        "pattern": "\\{.*name.*:.*test.*\\}"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "data.json": "{\"name\": \"test\", \"value\": 123}"
        }
      }
    },
    {
      "id": "read-010",
      "description": "Read non-existent file",
      "tool": "read_file",
      "category": "error_handling",
      "tags": ["read", "error", "not-found"],
      "difficulty": 1,
      "input": {
        "params": {
          "path": "does-not-exist.txt"
        }
      },
      "expected": {
        "success": false,
        "errorCode": "FILE_NOT_FOUND"
      },
      "fixtures": {
        "type": "inline",
        "files": {}
      }
    },
    {
      "id": "read-011",
      "description": "Read directory instead of file",
      "tool": "read_file",
      "category": "error_handling",
      "tags": ["read", "error", "directory"],
      "difficulty": 2,
      "input": {
        "params": {
          "path": "somedir"
        }
      },
      "expected": {
        "success": false,
        "errorCode": "INVALID_PATH"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "somedir/.keep": ""
        }
      }
    },
    {
      "id": "read-012",
      "description": "Read with invalid offset (negative)",
      "tool": "read_file",
      "category": "error_handling",
      "tags": ["read", "error", "validation", "offset"],
      "difficulty": 2,
      "input": {
        "params": {
          "path": "test.txt",
          "offset": -1
        }
      },
      "expected": {
        "success": false,
        "errorCode": "INVALID_PARAMS"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "test.txt": "content"
        }
      }
    },
    {
      "id": "read-013",
      "description": "Read with invalid limit (zero)",
      "tool": "read_file",
