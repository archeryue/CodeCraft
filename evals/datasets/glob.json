    {
      "id": "glob-014",
      "description": "Large directory glob (performance)",
      "tool": "Glob",
      "category": "performance",
      "tags": [
        "glob",
        "performance",
        "large"
      ],
      "difficulty": 3,
      "input": {
        "params": {
          "pattern": "**/*.txt"
        }
      },
      "expected": {
        "success": true,
        "performance": {
          "maxTimeMs": 500
        }
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "{{repeat:dir{{i}}/file.txt:100}}": "content"
        }
