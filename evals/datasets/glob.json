      "tags": [
        "glob",
        "brace"
      ],
      "difficulty": 2,
      "input": {
        "params": {
          "pattern": "*.{ts,js}"
        }
      },
      "expected": {
        "success": true,
        "contains": "app.ts"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "app.ts": "export {}",
          "util.js": "module.exports = {}",
