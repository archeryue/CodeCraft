{
  "tool": "Glob",
  "version": "1.0",
  "description": "Comprehensive evaluation dataset for glob tool",
  "cases": [
    {
      "id": "glob-001",
      "description": "Simple wildcard pattern",
      "tool": "Glob",
      "category": "happy_path",
      "tags": [
        "glob",
        "wildcard",
        "basic"
      ],
      "difficulty": 1,
      "input": {
        "params": {
          "pattern": "*.txt"
        }
      },
      "expected": {
        "success": true,
        "contains": "test.txt"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "test.txt": "content",
          "other.txt": "other",
          "script.sh": "#!/bin/bash"
        }
      }
    },
    {
      "id": "glob-002",
      "description": "Recursive glob pattern",
      "tool": "Glob",
      "category": "happy_path",
      "tags": [
        "glob",
        "recursive"
      ],
      "difficulty": 2,
      "input": {
        "params": {
          "pattern": "**/*.ts"
        }
      },
      "expected": {
        "success": true,
        "contains": "src/index.ts"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "index.ts": "export {}",
          "src/index.ts": "export {}",
          "src/lib/util.ts": "export {}"
        }
      }
    },
    {
      "id": "glob-003",
      "description": "Match specific directory",
      "tool": "Glob",
      "category": "happy_path",
      "tags": [
        "glob",
        "directory"
      ],
      "difficulty": 2,
      "input": {
        "params": {
          "pattern": "src/*.ts"
        }
      },
      "expected": {
        "success": true,
        "contains": "src/index.ts"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "index.ts": "export {}",
          "src/index.ts": "export {}",
          "src/util.ts": "export {}"
        }
      }
    },
    {
      "id": "glob-004",
      "description": "Character class pattern",
      "tool": "Glob",
      "category": "happy_path",
      "tags": [
        "glob",
        "char-class"
      ],
      "difficulty": 2,
      "input": {
        "params": {
          "pattern": "test[0-9].txt"
        }
      },
      "expected": {
        "success": true,
        "contains": "test1.txt"
      },
      "fixtures": {
        "type": "inline",
        "files": {
          "test1.txt": "content",
          "test2.txt": "content",
          "testA.txt": "content"
        }
      }
    },
    {
      "id": "glob-005",
