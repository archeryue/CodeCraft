{
  "tool": "llm_evaluation",
  "version": "1.0",
  "description": "LLM tool selection evaluation for file operations",
  "cases": [
    {
      "id": "llm-file-001",
      "description": "Read specific file",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "read"],
      "difficulty": 1,
      "input": {
        "query": "Show me the contents of package.json"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "forbiddenTools": ["EditFile"],
        "expectedParams": {
          "path": { "pattern": "package\\.json" }
        }
      }
    },
    {
      "id": "llm-file-002",
      "description": "Read file with extension",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "read"],
      "difficulty": 1,
      "input": {
        "query": "Can you read the README.md file?"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "expectedParams": {
          "path": { "pattern": "README" }
        }
      }
    },
    {
      "id": "llm-file-003",
      "description": "Read file from subdirectory",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "read"],
      "difficulty": 2,
      "input": {
        "query": "Show me src/agent.ts"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "expectedParams": {
          "path": { "pattern": "src.*agent" }
        }
      }
    },
    {
      "id": "llm-file-004",
      "description": "Create new file (use Bash)",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "write"],
      "difficulty": 1,
      "input": {
        "query": "Create a file called test.txt with the content 'Hello World'"
      },
      "expected": {
        "expectedTool": "Bash",
        "forbiddenTools": ["ReadFile"],
        "expectedParams": {
          "command": { "type": "string" }
        }
      }
    },
    {
      "id": "llm-file-005",
      "description": "Write configuration file",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "write"],
      "difficulty": 2,
      "input": {
        "query": "Create a config.json file with empty object"
      },
      "expected": {
        "expectedTool": "Bash",
        "acceptableTools": ["EditFile"]
      }
    },
    {
      "id": "llm-file-006",
      "description": "Edit file - replace text",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "edit"],
      "difficulty": 2,
      "input": {
        "query": "In test.txt, replace 'Hello' with 'Hi'"
      },
      "expected": {
        "expectedTool": "EditFile",
        "expectedParams": {
          "path": { "contains": "test" },
          "old_string": { "contains": "Hello" },
          "new_string": { "contains": "Hi" }
        }
      }
    },
    {
      "id": "llm-file-007",
      "description": "Edit file - update variable",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "edit"],
      "difficulty": 2,
      "input": {
        "query": "Change the version in package.json from 1.0.0 to 1.1.0"
      },
      "expected": {
        "expectedTool": "EditFile",
        "expectedParams": {
          "path": { "contains": "package" }
        }
      }
    },
    {
      "id": "llm-file-008",
      "description": "Delete file (use Bash rm)",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "delete"],
      "difficulty": 1,
      "input": {
        "query": "Delete the file temp.txt"
      },
      "expected": {
        "expectedTool": "Bash",
        "forbiddenTools": ["EditFile"],
        "expectedParams": {
          "command": { "pattern": "rm" }
        }
      }
    },
    {
      "id": "llm-file-009",
      "description": "Remove test file (use Bash)",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "delete"],
      "difficulty": 1,
      "input": {
        "query": "Remove test.log"
      },
      "expected": {
        "expectedTool": "Bash",
        "expectedParams": {
          "command": { "pattern": "rm.*test.*log" }
        }
      }
    },
    {
      "id": "llm-file-010",
      "description": "List directory contents (use Bash ls)",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "list"],
      "difficulty": 1,
      "input": {
        "query": "What files are in the src directory?"
      },
      "expected": {
        "expectedTool": "Bash",
        "expectedParams": {
          "command": { "pattern": "ls.*src" }
        }
      }
    },
    {
      "id": "llm-file-011",
      "description": "List current directory (use Bash)",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "list"],
      "difficulty": 1,
      "input": {
        "query": "Show me what's in this directory"
      },
      "expected": {
        "expectedTool": "Bash",
        "expectedParams": {
          "command": { "pattern": "ls" }
        }
      }
    },
    {
      "id": "llm-file-012",
      "description": "Browse project structure",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "list"],
      "difficulty": 2,
      "input": {
        "query": "List all files in the tests folder"
      },
      "expected": {
        "expectedTool": "Bash",
        "acceptableTools": ["Glob"]
      }
    },
    {
      "id": "llm-file-013",
      "description": "Read partial file",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "read", "advanced"],
      "difficulty": 3,
      "input": {
        "query": "Show me the first 10 lines of index.ts"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "expectedParams": {
          "path": { "contains": "index" },
          "limit": { "type": "number" }
        }
      }
    },
    {
      "id": "llm-file-014",
      "description": "Edit code file",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "edit", "code"],
      "difficulty": 2,
      "input": {
        "query": "In src/agent.ts, change the timeout from 30000 to 60000"
      },
      "expected": {
        "expectedTool": "EditFile",
        "acceptableTools": ["ReadFile"]
      }
    },
    {
      "id": "llm-file-015",
      "description": "Create script file",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "write", "script"],
      "difficulty": 2,
      "input": {
        "query": "Create a script.sh file that echoes 'Hello'"
      },
      "expected": {
        "expectedTool": "Bash",
        "acceptableTools": ["EditFile"]
      }
    },
    {
      "id": "llm-file-016",
      "description": "Ambiguous read vs list",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "ambiguous"],
      "difficulty": 2,
      "input": {
        "query": "What's in package.json?"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "acceptableTools": ["Bash"],
        "expectedParams": {
          "path": { "contains": "package" }
        }
      }
    },
    {
      "id": "llm-file-017",
      "description": "Should NOT delete for edit",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "safety"],
      "difficulty": 2,
      "input": {
        "query": "Update the title in README.md"
      },
      "expected": {
        "expectedTool": "EditFile",
        "acceptableTools": ["ReadFile"]
      }
    },
    {
      "id": "llm-file-018",
      "description": "Should NOT write for read",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "safety"],
      "difficulty": 1,
      "input": {
        "query": "Display the contents of config.json"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "forbiddenTools": ["EditFile"]
      }
    },
    {
      "id": "llm-file-019",
      "description": "Read with offset parameter",
      "tool": "llm_evaluation",
      "category": "llm_params",
      "tags": ["file_ops", "params"],
      "difficulty": 3,
      "input": {
        "query": "Show me lines 50-100 of src/agent.ts"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "expectedParams": {
          "path": { "contains": "agent" },
          "offset": { "type": "number" },
          "limit": { "type": "number" }
        }
      }
    },
    {
      "id": "llm-file-020",
      "description": "Create file in subdirectory",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "write"],
      "difficulty": 2,
      "input": {
        "query": "Create a new file at src/utils/helper.ts"
      },
      "expected": {
        "expectedTool": "Bash",
        "acceptableTools": ["EditFile"]
      }
    },
    {
      "id": "llm-file-021",
      "description": "View this file (implicit current)",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "read", "context"],
      "difficulty": 2,
      "input": {
        "query": "Show me this file"
      },
      "expected": {
        "expectedTool": "ReadFile",
        "expectedParams": {
          "path": { "type": "string" }
        }
      }
    },
    {
      "id": "llm-file-022",
      "description": "Edit multiple occurrences",
      "tool": "llm_evaluation",
      "category": "llm_selection",
      "tags": ["file_ops", "edit"],
      "difficulty": 3,
      "input": {
        "query": "In test.ts, replace all occurrences of 'foo' with 'bar'"
      },
      "expected": {
        "expectedTool": "EditFile",
        "acceptableTools": ["ReadFile"]
      }
    }
  ]
}
